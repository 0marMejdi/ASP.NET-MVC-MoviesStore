@model Hakuna.Models.Movie

@{
    ViewBag.Title = "Movie Edit";
    Layout = "_EditLayout";
    ViewBag.EditHeadline = "Modifying Movie";

}

<div class="form-group">
    <label class="form-label" >Name</label>
    <input type="text" class="form-control" required asp-for=Name value="@Model.Name">
</div>

<div class="form-group">
    <label class="form-label">Release Date</label>
    <input type="text" class="form-control" required asp-for=ReleaseDate value="@Model.ReleaseDate">
</div>
<div class="form-group">
    <label asp-for="GenreID" class="form-label">Genre</label> 
    <select asp-for="GenreID" required asp-items="ViewBag.Genres" value="@Model.GenreID" class="form-control">
        <option value="" selected > -- Select a Genre from the list</option>
    </select>
    <span asp-validation-for="GenreID" class="text-danger"></span>
</div>

<input type="hidden" asp-for="Id" value="@Model.Id" />


