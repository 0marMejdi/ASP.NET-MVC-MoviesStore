@{
    Layout = "_Layout.cshtml";
}
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    var controllerName = ViewContext.RouteData.Values["controller"] as string;
}
@Html.Partial("_SuccessFlash")
@Html.Partial("_FailFlash")
<h1>@ViewBag.Title</h1>

<hr>
<form method = "post" asp-controller="@controllerName" enctype = "multipart/form-data"  asp-action="Add">
    <div class="card"> 
        <div class="card-header">
            <h3>@ViewBag.AddHeadline</h3>
        </div>
        <div class="card-body">
            @RenderBody()
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">
                Save
            </button>
        </div>


    </div>
</form>
