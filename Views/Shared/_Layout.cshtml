<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC Movie </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hakuna.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    @Html.Partial("_NavBar")
        
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

    
</body>
<footer class="border-top footer layout-footer text-muted" style="color:black; bottom:unset;">
    <div class="container">
        &copy; 2023 - Hakuna - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</html>
<script>
    document.addEventListener("DOMContentLoaded", function () {
    let successAlert = document.getElementById("fail-alert");
    setTimeout(function(){
         successAlert.style.cssText = "opacity:0;";
    },1000)
    
});
</script>

